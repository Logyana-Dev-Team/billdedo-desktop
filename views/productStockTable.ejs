            <h4 class="modal-title">
              Update Stock - <%= product.productName %>
            </h4>
            <button
              type="button"
              class="btn-close closeUpdateModal"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <form
              id="data"
              action="/productStockUpdate/<%= product._id %>"
              method="POST"
            >
              <div class="row mb-3">
                <div class="col-6">
                  <h5>Product Name :</h5>
                </div>
                <div class="col-6"><h5><%= product.productName %></h5></div>
              </div>
              <div class="row mb-3">
                <div class="col-6">
                  <h5>Current Stock :</h5>
                </div>
                <div class="col-6">
                  <h5><%= product.productUnit %></h5>
                </div>
              </div>
              <div class="row mb-3">
                <div class="col">
                  <h5 for="productUnit" class="form-label">Add Unit:</h5>
                </div>
                <div class="col">
                  <input
                    type="text"
                    class="form-control"
                    id="productUnit"
                    name="productUnit"
                  />
                </div>
              </div>
              <div class="modal-footer">
                <button type="submit" class="btn btn-primary">Update</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    <script>
      $(".closeUpdateModal").on("click", () => {
        $("#modal-edit-user-<%= product._id %>").modal("hide");
      });
    </script>
    <%}); %>

