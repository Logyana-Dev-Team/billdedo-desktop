            <div class="addProduct">
              <form
                id="image"
                action="/editProductImage/<%= product._id %>"
                method="POST"
              >
                <div class="mb-3">
                  <label for="productImage" class="form-label"
                    >Product Image</label
                  >
                  <img
                    width="200px"
                    src="../img/<%= product.imageName %>"
                    id="output"
                  />
                </div>
                <div class="row">
                  <div class="col-8 mb-3">
                    <input
                      type="file"
                      class="form-control"
                      name="image"
                      id="file-selector"
                    />
                  </div>
                  <div class="col-4 mb-3">
                    <button type="submit" class="btn btn-primary">
                      Change Image
                    </button>
                  </div>
                </div>
              </form>

              <form
                id="data"
                action="/editProduct/<%= product._id %>"
                method="POST"
              >
                <input
                  type="text"
                  name="id"
                  id="id"
                  style="display: none"
                  value="<%= product._id %>"
                />
                <p id="status"></p>
                <div class="mb-3">
                  <label for="productName" class="form-label"
                    >Product Name</label
                  >
                  <input
                    type="text"
                    class="form-control"
                    id="productName"
                    name="productName"
                    value="<%= product.productName %>"
                  />
                </div>
                <div class="mb-3">
                  <label for="productCatagory" class="form-label"
                    >Product Catagory</label
                  >
                  <select
                    class="form-select"
                    aria-label="Select Product Catagory"
                    id="productCatagory"
                    name="productCatagory"
                    onchange="getCategoryName()"
                  >
                    <%if(product.productCatagory==""||product.productCatagory==null){%>
                    <option selected>Select Category</option>
                    <% }else{ %>
                    <option selected value="<%= product.productCatagory %>">
                      <%= product.productCatagory %>
                    </option>
                    <%}%> <% category.forEach(function (category){%>
                    <option value="<%= category.categoryName %>">
                      <%= category.categoryName %>
                    </option>
                    <%})%>
                  </select>
                </div>
                <label class="form-check-label" for="gstClass">
                  Select tax type
                </label>
                <div class="row" style="margin: 35px 0" id="gstClass">
                  <div class="col-6" style="padding: 0">
                    <div class="form-check">
                      <input
                        class="form-check-input"
                        type="radio"
                        id="radio-1"
                        value="gstIncluded"
                        name="radio"
                      />
                      <label class="form-check-label" for="flexCheckDefault">
                        GST Included
                      </label>
                    </div>
                  </div>
                  <div class="col-6" style="padding: 0">
                    <div class="form-check">
                      <input
                        class="form-check-input"
                        type="radio"
                        value="gstExcluded"
                        id="radio-2"
                        name="radio"
                      />
                      <label class="form-check-label" for="flexCheckDefault">
                        Gst Excluded
                      </label>
                    </div>
                  </div>
                </div>
                <div class="mb-3">
                  <label for="selectTaxClass" class="form-label"
                    >Select Tax Class</label
                  >
                  <select
                    class="form-select"
                    aria-label="Select Product Catagory"
                    id="selectTaxClass"
                    name="selectTaxClass"
                  >
                    <%if(product.selectTaxClass==""||product.selectTaxClass==null){%>
                    <option>Select Tax Class</option>
                    <% }else{ %>
                    <option selected value="<%= product.selectTaxClass %>">
                      <%= product.selectTaxClass %>
                    </option>
                    <%}%> <% taxClass.forEach(function (tax){%>
                    <option value="<%= tax.tax %>&nbsp;<%= tax.taxPerc %>">
                      <%= tax.tax %>&nbsp;<%= tax.taxPerc %>
                    </option>
                    <%})%>
                  </select>
                </div>
                <div class="mb-3">
