                  >
                  <textarea
                    class="form-control"
                    id="productDescription"
                    rows="3"
                    name="productDescription"
                  >
<%= product.productDescription %></textarea
                  >
                </div>

                <button type="submit" class="btn btn-primary">Submit</button>
              </form>
            </div>
