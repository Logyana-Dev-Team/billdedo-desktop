    <script>
      $("form#image").submit(function (e) {
        e.preventDefault();
        var formData = new FormData(this);
        $.ajax({
          type: "POST",
          url: $("form#image").attr("action"),
          data: formData,
          processData: false,
          contentType: false,
          success: function (response) {
            const { dialog } = require("electron").remote;
            if (response.msg == "success") {
              dialog
                .showMessageBox({
                  buttons: ["Ok"],
                  title: "Success",
                  message: "Shop image changed Successfully",
                  detail:
                    "Your Shop image is changed successfully in your app!",
                })
                .then((result) => {
                  if (result.response === 0) {
                    location.reload();
                  }
                });
            } else if (response.msg == "error") {
              dialog
                .showMessageBox({
                  buttons: ["Ok"],
                  title: "Error",
                  message: "Something Went wrong",
                  detail: "Your Shop image is not changed!",
                })
                .then((result) => {
                  if (result.response === 0) {
                    location.reload();
                  }
                });
            }
          },
          error: function (response) {
            //  alert('server error')
          },
        });
      });
    </script>
