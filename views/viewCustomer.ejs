          remote.getCurrentWindow().webContents.openDevTools();
        } else if (e.which === 116) {
          location.reload();
        }
      });
    </script>
    <script>
      function productCsv() {
        $.ajax({
          url: "/supplierCsv",
          method: "post",
          dataType: "json",
          success: function (response) {
            const { dialog } = require("electron").remote;
            if (response.msg == "success") {
              dialog
                .showMessageBox({
                  buttons: ["Ok"],
                  title: "Success",
                  message: "Supplier Data Exported Successfully",
                  detail:
                    "Supplier Data Exported to suppliers.csv file successfully",
                })
                .then((result) => {
                  if (result.response === 0) {
                    location.reload();
                  }
                });
            } else {
              dialog.showErrorBox({
                title: "Error",
                message: "Supplier Data not exported",
                detail: "Something Went Wrong!",
              });
            }
          },
          error: function (response) {
            //  alert('server error')
          },
        });
      }
